<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fillViewport="true">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:http="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:contentDescription="@string/udacity_logo"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:fontFamily="sans-sarif"
            android:textScaleX="1.3"
            android:letterSpacing="0.12"
            android:textColor="@color/default_font_color"
            android:padding="@dimen/padding"
            android:drawablePadding="@dimen/drawable_padding"
            android:drawableLeft="@drawable/udacity_mark"
            android:drawableStart="@drawable/udacity_mark"
            android:text="@string/name" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoLink="map"
            android:fontFamily="sans-sarif"
            android:drawableLeft="@drawable/map"
            android:drawableStart="@drawable/map"
            android:drawablePadding="@dimen/drawable_padding"
            android:padding="@dimen/padding"
            android:textSize="@dimen/text_size_medium"
            android:textColorLink="@color/default_font_color"
            android:text="@string/address" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/padding"
            android:fontFamily="sans-sarif"
            android:autoLink="phone"
            android:textSize="@dimen/text_size_medium"
            android:drawableLeft="@drawable/phone"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="@dimen/drawable_padding"
            android:textColorLink="@color/default_font_color"
            android:text="@string/phone" />

        <ImageView
            android:id="@+id/bg2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:contentDescription="@string/bg2"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bg2" />

    </LinearLayout>
</ScrollView>
